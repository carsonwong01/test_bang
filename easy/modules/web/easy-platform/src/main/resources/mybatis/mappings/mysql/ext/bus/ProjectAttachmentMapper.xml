<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dimeng.framework.mybatis.dao">

	<resultMap id="findProjectAttachmentListResultMap" type="com.dimeng.entity.ext.bus.ProjectAttachmentResp">
		<id column="file_id" property="fileId" />
		<result column="name" property="name" />
		<result column="addr" property="addr" />
		<result column="alias" property="alias" />
		<result column="type" property="type" />
	</resultMap>

	<!-- 项目附件list -->
	<select id="findProjectAttachmentList" resultMap="findProjectAttachmentListResultMap" parameterType="com.dimeng.model.bus.ProjectAttachmentReq">
		SELECT
		<include refid="TProjectAttachment_Column_List" />
		FROM t_project_attachment
		WHERE 1 = 1
		<if test="fileId != null and fileId != ''">
			AND file_id=#{fileId,jdbcType=VARCHAR}
		</if>
		<if test="creatorId != null and creatorId != ''">
			AND creator_id=#{creatorId,jdbcType=VARCHAR}
		</if>
		<if test="status != null and status != ''">
			AND `status`=#{status,jdbcType=VARCHAR}
		</if>
		<if test="associatedId != null and associatedId != ''">
			AND associated_id=#{associatedId,jdbcType=VARCHAR}
		</if>
		<if test="type != null and type != ''">
			AND type=#{type,jdbcType=VARCHAR}
		</if>
		ORDER BY date_create ASC
	</select>

</mapper>