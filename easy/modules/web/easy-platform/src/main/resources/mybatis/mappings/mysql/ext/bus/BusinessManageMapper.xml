<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dimeng.framework.mybatis.dao">

	<!-- 项目失败、删除原因 -->
	<resultMap type="com.dimeng.entity.ext.bus.GetProjectReasonResp"
		id="GetProjectReasonRespResultMap">
		<result column="reason" property="reason" />
	</resultMap>
	
	<!-- 后台-业务管理-项目管理-失败原因 -->
	<select id="getOperateReason" resultMap="GetProjectReasonRespResultMap"
		parameterType="com.dimeng.model.bus.GetProjectReasonReq">
		select
		<if test="projectStatus == 3">
			failure_reason
		</if>
		<if test="projectStatus == 4">
			delete_reason
		</if>
		as reason
		from t_project_info
		where project_id=#{projectId,jdbcType=VARCHAR}
	</select>

	

</mapper>